<!-- main page content -->
<div class="container">
  <div id="mainContent">

  
    <div id="accordion">
      {{#each data}}
      <div class="card">
        <div class="card-header" id="card-heading">
          <h5 class="mb-0">
            <button class="btn btn-link" data-toggle="collapse" data-target="#card-collapse-{{id}}" aria-expanded="true" aria-controls="card-collapse">
              Ticket #{{id}} - {{Request.Department.name}} - {{Request.name}}
            </button>
          </h5>
        </div>
        <div id="card-collapse-{{id}}" class="collapse" aria-labelledby="card-body" data-parent="#accordion">
          <div class="card-body">
            {{#each Answers}}
            <p class="font-weight-bold text-dark">{{Question.label}}</p>
            <p>{{value}}</p>
            {{/each}}
            <p class="font-weight-bold text-dark">Comments</p>
            <p>{{comments}}</p>
            <button class="btn btn-dark closeTicket">Close Ticket</button>
          </div>
        </div>
      </div>
      {{/each}}
    </div>

  </div>
</div>

<div id="footer" class="text-center">
  <img src="/assets/img/simpl311.png" class= "logo" alt="">
  <a href="https://github.com/thechampl/311" class="footer-link" target="_blank"><p>Github</p></a>
