{{!-- Will's ticket modal --}}
<div class="modal fade" id="ticket-test" tabindex="-1" role="dialog" aria-labelledby="ticket-modal-title" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header bg-dark">
        <h5 class="modal-title text-light" id="login-modal-title">Create a Ticket</h5>
        <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <form>
          <div class="form-group">
            <select class="form-control" id="deptDropdown">
              <option id="deptDefault" value="" selected>Choose Department</option>
            </select>
          </div>
          <div class="form-group">
            <select class="form-control" id="reqDropdown" disabled>
              <option id="reqDefault" value="" selected>Choose Request</option>
            </select>
          </div>
          <div class="form-group" id="ticketQuestions"></div>
          {{!--
          <div class="form-group">
            <input type="submit" class="form-control" id="ticketComments" placeholder="Any additional comments?">
          </div> --}}

          <textarea name="ticket-comments" class="w-100" id="ticketComments" rows="10" placeholder="Explain your ticket request"></textarea>
          <p>Characters Remaining
            <span id="remainingChars">255</span>
          </p>

          <input href="/" id="ticketSubmit" type="submit" class="btn btn-dark btn-block" value="fuck">
        </form>
        <button id="ticketSubmit" type="button" class="btn btn-secondary btn-block">Submit Ticket</button>
      </div>

      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>

